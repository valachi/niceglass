<%= form_for @art, html: { multipart: true } do |f| %>
  <% if @art.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@art.errors.count, "error") %> prohibited this art from being saved:</h2>

      <ul>
      <% @art.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= image_tag(@art.image.thumb.url) if @art.image  %>
  <div class="field">
    <%= f.label 'Работа' %><br />
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label 'Заголовок работы' %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label 'Описание' %><br />
    <%= f.text_area :desc, size: '45x10' %>
  </div>
  <div class="actions">
    <%= f.submit 'Добавить' %>
  </div>
<% end %>
